<h3 style="color: blue">LISTA DE PRODUCTOS</h3>

    <% if (listExists) { %>
    <div class="container table-responsive">
        <table class="table table-dark">
        <tr style="color: yellow">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
        <% productos.forEach( producto => { %>
            <tr>
                <td>
                <%=producto.title %>
                </td>
                <td>
                <%=producto.price %>
                </td>
                <td>
                <img
                    style="width: 60px"
                    src=<%=producto.thumbnail %>
                    alt=<%=producto.title %>
                />
                </td>
            </tr>        
        <% }) %>
        </table>
    </div>
    <% } else { %>
    <h3 class="container alert alert-danger">NO HAY PRODUCTOS</h3>
    <% } %>