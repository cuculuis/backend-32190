extends body 

block producto
        if listExists
            h3(style='color:blue;') LISTA DE PRODUCTOS
            .container.table-responsive
            table.table.table-dark
                tr(style="color: yellow;")
                    th(scope='col') Producto
                    th(scope='col') Precio
                    th(scope='col') Imagen
                each n in productos 
                    tr(style="color: white;")
                        td= n.nombre
                        td= n.price
                        td
                            img(style="width: 60px", src=n.thumbnail, alt=n.nombre)
        else
            h4.alert.alert-danger.container NO HAY PRODUCTOS