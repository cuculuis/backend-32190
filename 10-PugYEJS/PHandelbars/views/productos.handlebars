<div class="container mt-3 d-flex justify-content-center flex-column align-items-center">
    <div class="container mt-3 d-flex justify-content-center flex-column align-items-center">
        <div class="text-bg-light" style="padding: 0rem 2rem;">
            <h3 style="color:blue;">Agrega productos</h1>
            <br>

            <form action="/productos" method="post">

                <div class="form-group">
                    <label for="title"><b>Titulo</b></label>
                    <input id="title" class="form-control" type="text" name="title">
                </div>

                <div class="form-group">
                    <label for="price"><b>Precio</b></label>
                    <input id="price" class="form-control" type="text" name="price">
                </div>

                <div class="form-group">
                    <label for="thumbnail"><b>Imagen</b></label>
                    <input id="thumbnail" class="form-control" type="text" name="thumbnail">
                </div>

                <button class="btn btn-success mt-3 mb-5">Enviar</button>
            </form>
        </div>


        {{#if productos.length}}
        <h3 style="color:blue;">LISTA DE PRODUCTOS</h3>
        <div class="container table-responsive">
            <table class="table table-dark">
                <tr style="color: yellow;">
                    <th>Producto</th>
                    <th>Precio</th>
                    <th>Imagen</th>
                </tr>

                {{#each productos}}
                <tr>
                    <td>
                        {{this.title}}
                    </td>
                    <td>
                        {{this.price}}
                    </td>
                    <td>
                        <img style="width: 60px" src="{{this.thumbnail}}" alt="{{this.title}}">
                    </td>
                </tr>
                {{/each}}
            </table>
        </div>
        {{else}}
        <h3 class="container alert alert-danger">NO HAY PRODUCTOS</h3>
        {{/if}}
    </div>
</div>